<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <h1>
        <%= @article.title %>
        <span class="icon-edit">
          <%= link_to "", edit_article_path, :class => "fa fa-pencil" %>
          <%= link_to "", article_path, :class => "fa fa-trash-o", method: :delete, data: { confirm: "Are you sure you want to delete this article?" } %>
        </span>
      </h1>


      <hr>
      <p><%= @article.content %></p>
      <p><%= link_to "Homepage", articles_path %></p>
    </div>
  </div>
</div>

